<%- include ("../../partials/header.ejs") %>

    <body>
        <%- include ("../../partials/navbar.ejs") %>
        <div class="container">
            <h2>Categorias</h2>
            <a class="btn btn-primary mb-2" href="./categorias/new">Criar Nova Categoria</a>
            <table class="table table-dark table-hover table-striped text-center "> 
                <thead>
                    <tr>
                        <th>ID</th><th>Título</th><th>Slug</th><th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let index = 0; index < categorias.length; index++ ) { %>
                        <tr>
                            <th><%= index+1 %> </th><th><%= categorias[index].titulo %> </th><th><%= categorias[index].slug %> </th><th><i class="bi bi-trash"></i></th>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
            <%- include ("../../partials/footer.ejs") %>